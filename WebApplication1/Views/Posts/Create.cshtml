@{
    ViewData["Title"] = "Create Post";
    var categories = ViewBag.Categories;
}
@model PostViewModel
<div class="card mb-4">
    <div class="card-body">
<h2>Create Post</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Content">Content</label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Category">Category</label>
        <select asp-for="Category" asp-items="@(new SelectList(categories))" class="form-control"></select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="File">Image</label>
        <input type="file" asp-for="File" class="form-control" />
    </div>
    <input type="hidden" asp-for="Username" value="@ViewBag.Username" />
    <button type="submit" class="btn btn-primary mt-3">Create</button>
</form>
<a href="@Url.Action("Index")" class="btn btn-secondary mt-3">Back to List</a>
</div>
</div>
