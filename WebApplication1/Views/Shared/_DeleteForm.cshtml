@model CommentViewModel

<div id="delete-form-@Model.Id" class="delete-form collapse">
    <p>Are you sure you want to delete this comment?</p>
    <form method="post" action="@Url.Action("Delete", "Comment")">
        <input type="submit" value="Yes" class="btn btn-danger" />
        <button type="button" class="btn btn-secondary cancel-delete" data-bs-toggle="collapse" data-bs-target="#delete-form-@Model.Id">Cancel</button>
        <input type="hidden" name="Id" value="@Model.Id" />
    </form>
</div>
