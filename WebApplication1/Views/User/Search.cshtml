@using ForumProject.Models.ViewModels.User
@model SearchUserViewModel

@{
    ViewData["Title"] = "Search users";
}



<section>
    <div class="container pb-5">
        <div class="row">
            <div class="col">
                <nav aria-label="breadcrumb" class="bg-body-tertiary rounded-3 p-3 mb-4">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Users Search</li>
                    </ol>
                </nav>
            </div>
        </div>


        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">



                        <h2>Search users</h2>


                        <form asp-action="Search" class="mb-5">
                            <div class="form-group mb-2">
                                <label for="Username">Username</label>
                                <input type="text" class="form-control" asp-for="Username">
                            </div>
                            <button type="submit" class="btn btn-primary">Search</button>
                        </form>

                        @if (Model.Result.Any())
                        {
                            @foreach (var user in Model.Result)
                            {
                                <div class="text-muted pt-3">
                                    <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">

                                        <div class="d-flex justify-content-between align-items-center w-100">
                                            <div class="d-flex">
                                                <img alt="32x32" class="rounded d-block align-middle" style="width: 32px; height: 32px;" src="@user.ProfilePictureURL">
                                                <div class="mx-3">

                                                    <strong class="text-gray-dark">@user.Username</strong>
                                                    <span class="d-block">@user.FirstName @user.LastName</span>
                                                </div>
                                            </div>

                                            @Html.ActionLink("View profile", "Profile", "User", new { username = user.Username }, null)
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <h2>No users found.</h2>
                        }



                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

